<h2>Welcome to Pizza Shop!!</h2>

<div class="row">

	<% @products.each do |p| %>
	<div class="col-md-3">
		<div>
			<b><%= p.title %></b>
		</div>

		<div>
			<img src="<%= p.path_to_image %>" width="200" height="150"/>
		</div>

		<div>
			<b>Description:</b> <%= p.description %>
		</div>

		<div>
			<b>Price:</b> <%= p.price %> rub
		</div>

		<div>
			<b>Size:</b> <%= p.size %>
		</div>

		<div>
			<button type="button" class="btn btn-sm btn-success" onclick="add_to_cart(<%= p.id %>)">Add to cart</button>
		</div>

	</div>
	<% end %>

</div>
</br>

